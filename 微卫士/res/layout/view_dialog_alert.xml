<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="TextViewEdits,HardcodedText,ContentDescription,InefficientWeight,UseCompoundDrawables,PxUsage,UselessParent" >

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/view_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="温馨提醒"
            android:textColor="#444444"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/lable"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical" >

                <TextView
                    android:id="@+id/view_dialog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#444444"
                    android:textSize="18sp" />
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#55999999"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/view_dialog_negative"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:text="取消"
                android:textColor="#444444"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#55999999"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/view_dialog_neutral"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:text="中立"
                android:textColor="#444444"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/layout_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#55999999"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/view_dialog_positive"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:focusable="true"
                android:text="确认"
                android:textColor="#444444"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>